<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="pollutionModels"
            type="com.example.myweather.models.PollutionModels" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_pollution_text_nh3"
                android:layout_width="50dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Nh3">

            </TextView>


            <TextView
                android:id="@+id/text_view_pollution_value_nh3"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="@{Double.toString(pollutionModels.nh3)}">
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_pollution_text_pm10"
                android:layout_width="50dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Pm10">

            </TextView>


            <TextView
                android:id="@+id/text_view_pollution_value_pm10"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="@{Double.toString(pollutionModels.pm10)}">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_pollution_text_pm_2_5"
                android:layout_width="50dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Pm2_5">

            </TextView>


            <TextView
                android:id="@+id/text_view_pollution_value_pm_2_5"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="@{Double.toString(pollutionModels.pm2_5)}">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_pollution_text_so2"
                android:layout_width="50dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="So2">

            </TextView>


            <TextView
                android:id="@+id/text_view_pollution_value_so2"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="@{Double.toString(pollutionModels.so2)}">
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_pollution_text_o3"
                android:layout_width="50dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="O3">

            </TextView>


            <TextView
                android:id="@+id/text_view_pollution_value_o3"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="@{Double.toString(pollutionModels.o3)}">
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_pollution_text_no2"
                android:layout_width="50dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="No2">

            </TextView>


            <TextView
                android:id="@+id/text_view_pollution_value_no2"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="@{Double.toString(pollutionModels.no2)}">
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_pollution_text_no"
                android:layout_width="50dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="No">

            </TextView>


            <TextView
                android:id="@+id/text_view_pollution_value_no"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="@{Double.toString(pollutionModels.no)}">
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_pollution_text"
                android:layout_width="50dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Co">

            </TextView>


            <TextView
                android:id="@+id/text_view_pollution_value"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="@{Double.toString(pollutionModels.co)}">
            </TextView>

        </LinearLayout>

        <View style="@style/Divider"/>

    </LinearLayout>
</layout>